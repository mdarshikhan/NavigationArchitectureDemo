<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.mak.navigationarchitecturedemo.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_storageFragment"
            app:destination="@id/storageFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.mak.navigationarchitecturedemo.ui.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_viewPagerFragment_to_signinFragment"
            app:destination="@id/signinFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_viewPagerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signinFragment"
        android:name="com.mak.navigationarchitecturedemo.ui.auth.SigninFragment"
        android:label="fragment_singin"
        tools:layout="@layout/fragment_singin">
        <action
            android:id="@+id/action_signinFragment_to_storageFragment"
            app:destination="@id/storageFragment"
            app:popUpTo="@id/signinFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signinFragment_to_signupFragment"
            app:destination="@id/signupFragment"
            app:popUpTo="@id/signinFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.mak.navigationarchitecturedemo.ui.auth.SignupFragment"
        android:label="fragment_singin"
        tools:layout="@layout/fragment_singup">
        <action
            android:id="@+id/action_signinFragment_to_storageFragment"
            app:destination="@id/storageFragment"
            app:popUpTo="@id/signinFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/storageFragment"
        android:name="com.mak.navigationarchitecturedemo.ui.onboarding.screens.StoragePermissionFragment"
        android:label="fragment_storage_permission"
        tools:layout="@layout/fragment_storage_permission">
        <action
            android:id="@+id/action_storageFragment_to_locationFragment"
            app:destination="@id/locationFragment"
            app:popUpTo="@id/storageFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/locationFragment"
        android:name="com.mak.navigationarchitecturedemo.ui.onboarding.screens.LocationPermissionFragment"
        android:label="fragment_location_permission"
        tools:layout="@layout/fragment_location_permission">
        <action
            android:id="@+id/action_locationFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/locationFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mak.navigationarchitecturedemo.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>